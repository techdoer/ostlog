{
  "id": "http://ostlog.org/calendar_dates#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A date dimension to capture a date in time and its related metadata.",
  "type": "object",
  "properties": {
    "date_id": {
      "type": "integer"
    },
    "full_date": {
      "type": "string",
      "format": "date-time"
    },
    "day_in_week": {
      "type": "integer"
    },
    "day_in_month": {
      "type": "integer"
    },
    "day_in_quarter": {
      "type": "integer"
    },
    "day_in_year": {
      "type": "integer"
    },
    "week_in_year": {
      "type": "integer"
    },
    "month_in_quarter": {
      "type": "integer"
    },
    "month_in_year": {
      "type": "integer"
    },
    "quarter_in_year": {
      "type": "integer"
    },
    "year": {
      "type": "integer"
    },
    "remarks": {
      "type": "string"
    }
  }
}