{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Location.json",
	"title": "Location",
	"description": "A specific place on earth.",
	"type": "object",
	"properties": {
		"location_id": {
			"type": "integer"
		},
		"name": {
			"type": "string"
		},
		"country_iso3_code": {
			"type": "string"
		},
		"latitude": {
			"type": "number",
			"description": "Latitude of location"
		},
		"longitude": {
			"type": "number",
			"description": "Longitude of location"
		},
		"customGroup1": {
			"type": "string",
			"description": "for convenient grouping of multiple locations."
		},
		"remarks": {
			"type": "string"
		}
	},
	"required": ["id", "name"]
}
