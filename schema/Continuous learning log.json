{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Continuous_learning_log.json",
	"title": "Continuous_learning_log log",
	"description": "Each entry records a continuous learning activity.",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer"
		},
		"meta_id": {
			"type": "integer",
			"description": "reference to entry's metadata"
		},
		"schedule_id": {
			"type": "integer",
			"description": "reference to learning schedule."
		},
		"location_id": {
			"type": "integer",
			"description": "location where observation was observed."
		},
		"domain": {
			"$ref": "definitions.json#/domain"
		},
		"person_id": {
			"type": "integer",
			"description": "the person who carried out the learning."
		},
		"name": {
			"type": "string",
			"description": "the name of the activity."
		},
		"type": {
			"type": "string",
			"enum": ["reading", "writing", "listening", "hybrid"],
			"description": "the type of learning activity."
		},
		"status": {
			"type": "string",
			"enum": ["planned", "in-progress", "completed", "canceled"]
		},
		"was successful": {
			"$ref": "definitions.json#/likert_scale",
			"description": "indicates whether the learning activity was successful"
		},
		"remarks": {
			"type": "string"
		}
	},
	"required": [ "id", "schedule_id", "location_id", "domain", "person_id", "name", "type", "status" ]
}
