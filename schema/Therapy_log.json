{

	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Therapy_log.json",
	"title": "Therapy log",
	"description": "Each entry describes a theraputical intervention in time.",
	"type": "object",
	"properties": {

		"id": {
			"type": "integer"
		},
		"calendar_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date of the intervention."
		},
		"timestamp": {
			"type ": "string ",
			"description": "HH:MM:SS formatted time of the intervention."
		},
		"domain ": {
			"$ref": "definitions.json#/domain"
		},
		"person_id ": {
			"type": "integer",
			"description ": "the person receiving the therapy."
		},
		"therapy_sctid": {
			"type": "string",
			"description": "SNOWMED CT ID referencing a regime/therapy."
		},
		"was_effective": {
			"$ref": "definitions.json#/likert_scale"
		},
		"effective_remarks": {
			"type": "string"
		},
		"remarks": {
			"type": "string"
		},
		"required": ["id", "calendar_date_id", "timestamp", "domain", "person_id", "therapy_sctid", "was_effective"]

	}
}
