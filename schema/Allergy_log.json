{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/Allergy_log.json",
	"title": "Allergy log",
	"description": "An allergic disorder caused by specified antigen.",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer"
		},
		"calendar_date_id": {
			"type": "string",
			"description": "formatted YYYYMMDD date of exam"
		},
		"person_id": {
			"type": "string",
			"description": "person suffering the allergic disorder"
		},
		"domain": {
			"$ref": "definitions.json#/domain"
		},
		"allergen_type_sctid": {
			"description": "SNOWMED CT ID referencing a type of allergen disorder"
		},
		"remarks": {
			"type": "string"
		},

		"required": ["id", "calendar_date_id", "person_id"]
	}
}
