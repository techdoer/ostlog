{

	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Teeth_log.json",
	"title": "Mood log",
	"description": "Each entry records an observation or event on a person's tooth harmonzied to ISO3950 tooth numbering scheme.",
	"type": "object",
	"properties": {

		"id": {
			"type": "integer"
		},
		"calendar_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date of data observation/event."
		},
		"timestamp": {
			"type ": "string ",
			"description": "HH:MM:SS formatted time of observation/event."
		},
		"domain": {
			"$ref": "definitions.json#/domain"
		},
		"person_id": {
			"type": "integer",
			"description ": "the person to whom the tooth belongs."
		},
		"tooth_iso3950_number": {
			"type": "number",
			"enum": ["18", "17", "16", "15", "14", "13", "12", "11",
				"21", "22", "23", "24", "25", "126", "27", "28",
				"48", "47", "46", "45", "44", "43", "42", "41",
				"31", "32", "33", "34", "35", "36", "37", "38",
				"55", "54", "53", "52", "51",
				"61", "62", "63", "64", "65",
				"85", "84", "83", "82", "81",
				"71", "72", "73", "74", "75"],
			"description": "harmonized to ISO 3950"
		},
		"tooth_iso3950_name": {
			"type": "string",
			"enum": ["molar", "premolar", "canine", "incisor"],
			"description": "e.g. 'right molar'"
		},
		"event": {
			"type": "string",
			"description": "e.g. eruption, decay"
		},
		"remarks": {
			"type": "string"
		},
		"required": ["id", "calendar_date_id", "timestamp", "domain", "person_id", "tooth_iso3950_number", "tooth_iso3950_name", "event"]
	}
}
