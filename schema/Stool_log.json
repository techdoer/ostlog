{

	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Stool_log.json",
	"title": "Stool log",
	"description": "Each entry records results from a stool analysis examination",
	"type": "object",
	"properties": {

		"id": {
			"type": "integer"
		},
		"meta_id": {
			"type": "integer",
			"description": "reference to entry's metadata"
		},
		"calendar_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date of the stool sample."
		},
		"timestamp": {
			"type ": "string ",
			"description": "HH:MM:SS formatted time of the stool sample."
		},
		"domain ": {
			"$ref": "definitions.json#/domain"
		},
		"person_id": {
			"type": "integer",
			"description ": "the person to whom the stool sample belongs."
		},
		"bss_type": {
			"type": "integer",
			"enum": [1, 2, 3, 4, 5, 6, 7],
			"description": "Bristol stool scale"
		},
		"color": {
			"type": "string",
			"enum": ["brown", "green", "yellow", "black", "white", "red"],
			"description": "observed color of stool sample."
		},
		"amount": {
			"type": "string",
			"enum": ["little", "normal", "a lot"],
			"description": "observed quantity of stool sample."
		},
		"photo_url" {
			"type": "string",
			"description": "url linking to a photo of stool."		
		},
		"ph": {
			"type": "integer",
			"minimum": 1,
			"maximum": 14,
			"description": ""
		},
		"occult_blood": {
			"type": "boolean",
			"description": ""
		},
		"red_blood_cells": {
			"type": "boolean",
			"description": ""
		},
		"white_blood_cells": {
			"type": "boolean",
			"description": ""
		},
		"mucus": {
			"type": "boolean",
			"description": ""
		},
		"lysozyme_ng_ml": {
			"type": "integer",
			"description": ""
		},
		"calprotectin_ug_g": {
			"type": "integer",
			"description": ""
		},
		"lactoferrin_ug_ml": {
			"type": "integer",
			"description": ""
		},
		"carbohydrates": {
			"type": "boolean",
			"description": ""
		},
		"veg_fibers": {
			"type": "boolean",
			"description": ""
		},
		"muscle_fibers": {
			"type": "boolean",
			"description": ""
		},
		"fat_stain": {
			"type": "boolean",
			"description": ""
		},
		"elastase_ug_ml": {
			"type": "integer",
			"description": ""
		},
		"secretory_iga_mg_dl": {
			"type": "integer",
			"description": ""
		},
		"remarks": {
			"type": "string"
		},
		"required": ["id", "calendar_date_id", "timestamp", "domain", "person_id", "bss_type", "color", "amount"]
	}
}
