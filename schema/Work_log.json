{

	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/Work_log.json",
	"title": "Work log",
	"description": "Each entry records a person's work responsibilities and effort at a given point in time.",
	"type": "object",
	"properties": {

		"id": {
			"type": "integer"
		},
		"meta_id": {
			"type": "integer",
			"description": "reference to entry's metadata"
		},
		"calendar_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date."
		},
		"timestamp": {
			"type ": "string ",
			"description": "HH:MM:SS formatted time."
		},
		"domain": {
			"$ref": "definitions.json#/domain"
		},
		"person_id": {
			"type": "integer",
			"description": "the worker."
		},
		"direct_reports": {
			"type": "integer",
			"description": "the number of people supervised/managed-by the worker."
		},
		"remarks": {
			"type": "string"
		},
		"required": ["id", "calendar_date_id", "timestamp", "domain", "person_id"]

	}
}
