{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://ostlog.org/schema/School_grades_log.json",
	"title": "School grades log",
	"description": "Each entry records a grade received for a specific course/subject during the specified term.",
	"type": "object",
	"properties": {
		"id": {
			"type": "integer"
		},
		"meta_id": {
			"type": "integer",
			"description": "reference to entry's metadata"
		},
		"term_start_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date marking the start of the grading period."
		},
		"term_end_date_id": {
			"type": "string",
			"description": "YYYYMMDD formatted date marking the end of the grading period."
		},
		"location_id": {
			"type": "integer",
			"description": "location where school was carried out."
		},
		"domain": {
			"$ref": "definitions.json#/domain"
		},
		"person_id": {
			"type": "integer",
			"description": "the person receiving the grade."
		},
		"instructor_id": {
			"type": "integer",
			"description": "the person teaching the course."
		},
		"education_level_isced": {
			"type": "integer",
			"description": "referencing International Standard Classification of Education ISCED 2011."
		},
		"subject_name": {
			"type": "string"
		},
		"grade_point ": {
			"type": "number",
			"description": " "
		},
		"grade_description ": {
			"type": "string",
			"enum": ["distinguished", "excellent ", "very good ", "good ", "accepted ", "failed "],
			"description": " "
		},
		"grade_point_minimum": {
			"type": "number",
			"description": " "
		},
		"grade_point_maximum": {
			"type": "number",
			"description": " "
		},
		"grade_letter": {
			"type": "string",
			"enum": [" A ", " B ", " C ", " D ", " F "],
			"description": "A = Excellent, B = Good, C = Average, D = Below Average, F = Failing"
		},
		"remarks": {
			"type": "string"
		}
	},
	"required": ["id", "term_start_date_id", "term_end_date_id", "location_id", "domain", "person_id", "education_level_isced", "subject_name"]
}
